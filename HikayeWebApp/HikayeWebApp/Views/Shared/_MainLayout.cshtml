@{
    ViewBag.Title = "_MainLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .navbar {
            background-color: #8B4513; /* Kahverengi tonu */
        }

        .navbar-brand {
            font-family: 'Dancing Script', cursive;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            font-size: 0.9rem; /* Yazı fontunu küçültüyoruz */
            padding: 10px 15px;
            transition: background-color 0.3s, color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #A0522D; /* Daha açık bir kahverengi tonu */
                color: #fff;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">HikayeniYaz</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Home/Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Kategori/Index">Hikaye Kategorileri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/HikayeEkle/Index">Hikaye Ekle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Yazar/Index">Yazarlar</a>
                    </li>
                </ul>
                @if (ViewBag.YazarAd != null)
                {
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <!-- Sağdaki boşluklar için -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">@ViewBag.YazarAd</a>
                        </li>
                    </ul>
                }

                else
                {
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    <a class="nav-link" href="/FirstPage/SignupEkrani">Kayıt Ol</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/FirstPage/LoginEkrani">Giriş Yap</a>
                </li>
            </ul>
                }

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
